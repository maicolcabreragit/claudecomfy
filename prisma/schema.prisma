// ComfyClaude OS / ComfyLink Ecosystem - Database Schema
// PostgreSQL via Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// CORE USER & AUTHENTICATION
// =============================================================================

model User {
  id             String          @id @default(uuid())
  email          String?         @unique
  name           String?
  conversations  Conversation[]
  knowledgeBases KnowledgeBase[]
  projects       Project[]
  snippets       Snippet[]
  workflows      Workflow[]
  apiKeys        ApiKey[]
  settings       UserSettings?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

// =============================================================================
// USER SETTINGS - AI Provider & Preferences
// =============================================================================

model UserSettings {
  id               String     @id @default(uuid())
  userId           String     @unique
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // AI Provider Config
  aiProvider       AIProvider @default(ANTHROPIC)
  preferredModel   String     @default("claude-opus-4-5-20251101")
  openrouterApiKey String?    // Encrypted with AES-256-GCM
  openrouterKeyIv  String?    // IV for decryption
  anthropicApiKey  String?    // Optional override (encrypted)
  anthropicKeyIv   String?    // IV for decryption
  
  // Generation Parameters
  temperature      Float      @default(0.7)
  maxTokens        Int        @default(4096)
  
  // UI Preferences
  theme            Theme      @default(DARK)
  language         Language   @default(ES)
  
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

enum AIProvider {
  ANTHROPIC
  OPENROUTER
}

enum Theme {
  DARK
  LIGHT
  SYSTEM
}

enum Language {
  ES
  EN
}

// =============================================================================
// AGENCY MODE - Project Management
// =============================================================================

model Project {
  id            String         @id @default(uuid())
  name          String
  description   String?        @db.Text
  status        ProjectStatus  @default(ACTIVE)
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([userId])
  @@index([status])
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

// =============================================================================
// CONVERSATIONS & MESSAGES
// =============================================================================

model Conversation {
  id        String    @id @default(uuid())
  title     String?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?   // Optional: Link to project for Agency Mode
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([projectId])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // 'user' | 'assistant'
  content        String       @db.Text
  reasoning      String?      @db.Text // Extended thinking content from Opus 4.5
  images         String[]     // Array of image URLs for vision
  toolCalls      Json?        // Store tool call results (web search, etc.)
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

// =============================================================================
// KNOWLEDGE BASE - Context Injection
// =============================================================================

model KnowledgeBase {
  id         String   @id @default(uuid())
  name       String   // Filename or custom name
  content    String   @db.Text // Parsed context from Claude.ai exports
  summary    String?  @db.Text // AI-generated summary for quick reference
  tokenCount Int?     // Estimated token count for cache budgeting
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isActive   Boolean  @default(true) // Toggle for context injection
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

// =============================================================================
// ASSET VAULT - Snippets & Quick Commands
// =============================================================================

model Snippet {
  id        String      @id @default(uuid())
  trigger   String      // e.g., "/skin", "/fix-node"
  content   String      @db.Text
  type      SnippetType
  tags      String[]    // For filtering and search
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([userId, trigger]) // Each user has unique triggers
  @@index([userId])
  @@index([type])
}

enum SnippetType {
  PROMPT // Reusable prompt templates
  CODE   // Code snippets for ComfyUI
  FIX    // Common fixes/solutions
}

// =============================================================================
// CLOUD SANITIZER - Workflow Management
// =============================================================================

model Workflow {
  id           String   @id @default(uuid())
  name         String
  description  String?  @db.Text
  jsonContent  Json     // ComfyUI workflow JSON
  isCloudReady Boolean  @default(false) // Sanitized for cloud execution
  thumbnail    String?  // Optional preview image URL
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([isCloudReady])
}

// =============================================================================
// CHROME EXTENSION - API Key Management
// =============================================================================

model ApiKey {
  id        String    @id @default(uuid())
  key       String    @unique // Secure random key
  name      String    // e.g., "Chrome Laptop", "Work Desktop"
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastUsed  DateTime?
  expiresAt DateTime? // Optional expiration
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([key])
}

// =============================================================================
// TREND RADAR - Monitoring & Intelligence
// =============================================================================

model Trend {
  id          String        @id @default(uuid())
  title       String
  description String        @db.Text
  url         String?
  source      String        // reddit, twitter, civitai, huggingface, news
  category    TrendCategory
  heatScore   Int           @default(0) // 0-100 trending score
  keywords    String[]
  publishedAt DateTime?
  fetchedAt   DateTime      @default(now())
  
  @@index([category])
  @@index([heatScore])
  @@index([fetchedAt])
}

// =============================================================================
// TREND DIGEST - Saved Analysis/Summaries
// =============================================================================

model TrendDigest {
  id        String   @id @default(uuid())
  title     String   // "An√°lisis del 26 Dic 2024"
  summary   String   @db.Text
  content   Json     // LearningContent[] estructurado
  trendIds  String[] // IDs de trends analizados
  audioUrl  String?  // Audio generado (opcional)
  createdAt DateTime @default(now())
  
  @@index([createdAt])
}

enum TrendCategory {
  FLUX_TECHNIQUES
  LORA_MODELS
  MONETIZATION
  ANTI_DETECTION
  TOOLS
  NEWS
}

// =============================================================================
// LEARNING MODULES - Auto-detected Courses
// =============================================================================

model LearningModule {
  id             String         @id @default(uuid())
  title          String
  topic          String         // Normalized topic for matching
  description    String?        @db.Text
  status         LearningStatus @default(ACTIVE)
  progress       Int            @default(0) // 0-100
  conversationId String?
  units          LearningUnit[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  @@index([topic])
  @@index([status])
  @@index([createdAt])
}

model LearningUnit {
  id        String         @id @default(uuid())
  moduleId  String
  module    LearningModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  title     String
  completed Boolean        @default(false)
  order     Int            @default(0)
  createdAt DateTime       @default(now())
  
  @@index([moduleId])
}

enum LearningStatus {
  ACTIVE
  COMPLETED
  PAUSED
}

